rule "wyspiarski"
	salience 100
	when
		Fakt(klucz=="polozenie", tekst != "Wschod")
		Fakt(klucz=="niejednoznacznie", prawda)
	then
		Fakt o = Pytanie.zadaj("wyspiarski");
        insert(o);
        if (o.getPrawda())
        	insert(new Fakt("ma_morze", true));
end

rule "wladza"
	when
		o : Fakt(klucz=="niejednoznacznie", prawda)
	then
		Fakt p = Pytanie.zadaj("wladza");
		if (p.getTekst().equals("Kapitan") || p.getTekst().equals("Papie≈º")){
			o.setPrawda(false);
			update(o);
		}
		insert(p);
end

