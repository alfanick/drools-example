rule "czy_wodka"
	when
		Fakt(klucz=="polozenie", tekst == "Europa polnocna")
		Fakt(klucz=="szwecja", !prawda)
	then
		insert(Pytanie.zadaj("czy_wodka"));
end

rule "marka_samochodu_w"
	when
