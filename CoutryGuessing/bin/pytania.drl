		Fakt(klucz=="samochody", prawda)
	then
		insert(Pytanie.zadaj("marka_samochodu_w"));
end

rule "ma_morze"
	when
		Fakt(klucz=="wyspiarski", !prawda) or
		Fakt(klucz=="polozenie", tekst == "Europa wschodnia")
	then
		insert(Pytanie.zadaj("ma_morze"));
end
		
