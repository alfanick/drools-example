rule "start"
	salience 1000
	when
       
    then
        insert(Pytanie.zadaj("polozenie"));

end

rule "wyspiarski"
	when
		Fakt(klucz=="polozenie", tekst != "Europa wschodnia")
	then
		Fakt o = Pytanie.zadaj("wyspiarski");
        if (o.getPrawda())
        	insert(new Fakt("ma_morze", true));
end

rule "wladza"
	when
	then
		insert(Pytanie.zadaj("wladza"));
end

rule "euro"
	when
		Fakt(klucz=="polozenie", tekst in ("Europa polnocna", "Europa poludniowa", "Europa zachodnia"))
	then
		insert(Pytanie.zadaj("euro"));
end

